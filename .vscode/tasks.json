{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "msvc build",
        "type": "shell",
        "command": "cl.exe",
        "args": [
          "/EHsc",
          "/Zi",
          "/std:c++17",
          "/Fe:",
          "clipboard.exe",
          "main.cpp",
          "User32.lib",
          "clipboard_rs/target/debug/clipboard_rs.lib",
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "presentation": {
          "reveal": "always"
        },
        "problemMatcher": "$msCompile"
      },
      {
        "label": "cargo build",
        "type": "shell",
        "command": "cargo.exe",
        "args": [
          "build",
          "--manifest-path",
          "clipboard_rs/Cargo.toml",
          "--target",
          "x86_64-pc-windows-msvc"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "presentation": {
          "reveal": "always"
        },
        "problemMatcher": "$msCompile"
      }
    ]
  }